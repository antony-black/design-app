generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  nick      String   @unique
  name      String   @default("")
  password  String
  ideas     Idea[]
  createdAt DateTime @default(now())
}

model Idea {
  id          String   @id @default(uuid())
  nick        String   @unique
  name        String
  description String
  text        String
  author      User     @relation(fields: [authorId], references: [id])
  authorId    String
  createdAt   DateTime @default(now())
}
